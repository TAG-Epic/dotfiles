{
  "layer": "top",
  "modules-left": [
    "wlr/workspaces"
  ],
  "modules-center": {
    "hyprland/window": {
        "all_outputs": true
    }
  },
  "modules-right": [
    "tray",
    "memory",
    "cpu",
    "battery",
    "network",
    "clock"
  ],
  "wlr/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "sort-by-number": true,
    "persistent_workspaces": {
        "1": ["eDP-1"],
        "2": ["eDP-1"],
        "3": ["eDP-1"],
        "4": ["eDP-1"],
        "5": ["eDP-1"],
        "6": ["eDP-1"],
        "7": ["eDP-1"],
        "8": ["eDP-1"],
        "9": ["eDP-1"],
        "11": ["DP-2"],
        "12": ["DP-2"],
        "13": ["DP-2"],
        "14": ["DP-2"],
        "15": ["DP-2"],
        "16": ["DP-2"],
        "17": ["DP-2"],
        "18": ["DP-2"],
        "19": ["DP-2"],
    }
  },
  "wlr/window": {
    "max-length": 50
  },
  "tray": {
    "icon-size": 14,
    "spacing": 10
  },
  "cpu": {
    "interval": 1,
    "format": "  {usage}%",
    "max-length": 10
  },
  "memory": {
    "interval": 1,
    "format": " {}%",
    "max-length": 10
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "network": {
    "format": "",
    "format-wifi": "",
    "format-ethernet": "",
    "format-disconnected": "", 
    "tooltip-format": " {ifname} via {gwaddr}",
    "tooltip-format-wifi": " {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": " {ifname}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50
  },
  "wireplumber": {
    "format": "{icon}",
    "format-muted": "",
    "format-icons": ["", "", ""],
    "tooltip-format": "{node_name}: {volume}"
  },
  "clock": {
    "format-alt": "{:%a, %d. %b  %H:%M}"
  }
}
