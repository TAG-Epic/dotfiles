# Volume control
"maim -u -s -B | xclip -selection clipboard -t image/png"
    F12
"amixer sset Master 5%+"
    m:0x0 + c:123
    XF86AudioRaiseVolume
"amixer sset Master 5%-"
    m:0x0 + c:122
    XF86AudioLowerVolume

# Music
"playerctl previous"
    F9
"playerctl play-pause"
    F10
"playerctl next"
    F11

# Screen lock
"dm-tool lock"
    m:0x40 + c:46
    Mod4 + l
